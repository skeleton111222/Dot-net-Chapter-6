@model Mvcdemoapp.Models.Student
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>MIT Student Registration</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <div class="container mt-5">

        <!-- Header Section -->
        <div class="text-center mb-4">
            <img src="~/mit.webp" alt="MIT Logo" width="120" />
            <h2 class="mt-3">MIT Student Registration</h2>
            <p class="text-muted">Massachusetts Institute of Technology </p>
        </div>

        <!-- Form Section -->
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card shadow-sm">
                    <div class="card-body">

                        <form method="post">

                            <!-- Name -->
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(m => m.Name)
                                </span>
                            </div>

                            <!-- Age -->
                            <div class="mb-3">
                                <label asp-for="Age" class="form-label"></label>
                                <input asp-for="Age" class="form-control" />
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(m => m.Age)
                                </span>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">
                                    Register Student
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

                <!-- Display Submitted Data -->
                @if (Model != null && !string.IsNullOrEmpty(Model.Name))
                {
                    <div class="alert alert-success mt-4">
                        <strong>Submitted Details:</strong><br />
                        Student Name: @Model.Name <br />
                        Student Age: @Model.Age
                    </div>
                }

            </div>
        </div>

    </div>

</body>
</html>
